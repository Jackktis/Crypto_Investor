<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/BoughtCurrencyIcon"
        android:layout_marginHorizontal="5dp"
        android:layout_weight="1.4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/crypto_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/boughtCurrencyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CURRENCY NAME"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/boughtCurrencySymbol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Symbol" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/boughtPricetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bought at: " />
            <TextView
                android:id="@+id/boughtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10000" />
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_weight="1.3"
        android:orientation="vertical">
        <TextView
            android:id="@+id/boughtPriseTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_gravity="right"
            android:textColor="@color/black"
            android:text="Earned:" />

        <TextView
            android:id="@+id/boughtQuantitiesTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="right"
            android:textColor="@color/black"
            android:text="quantities:" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="1.1"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/differencePrice"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="bought price" />
        <TextView
            android:id="@+id/bought_quantities"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_marginVertical="10dp"
            android:layout_height="wrap_content"
            android:text="quantities" />
    </LinearLayout>
</LinearLayout>