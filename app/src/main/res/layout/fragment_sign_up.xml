<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".view.ui.SignUpFragment">


    <TextView
        android:id="@+id/TxtCreateUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="101dp"
        android:gravity="center"
        android:text="Create a new user"
        android:textAlignment="center"
        android:textColor="@color/PrimaryColor"
        android:textSize="40sp" />


    <LinearLayout
        android:id="@+id/Infolinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TxtCreateUser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/CreateUserUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/createUserFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signUpUsername"
            android:layout_marginVertical="20dp"
            android:layout_marginTop="6dp"
            android:ems="10"
            android:hint="Full Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/createUserPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/createUserBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="Create" />
    </LinearLayout>

    <View
        android:id="@+id/vector"
        android:layout_width="411dp"
        android:layout_height="300dp"
        android:layout_below="@+id/Infolinear"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-45dp"
        android:layout_marginBottom="-1dp"
        android:background="@mipmap/splashscreen_graph" />

</RelativeLayout>
