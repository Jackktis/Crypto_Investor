<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.fragments.BuyAndSellCryptoFragment"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingHorizontal="90dp">


    <TextView
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="@color/PrimaryColor"
        android:textSize="20dp"
        android:gravity="center"
        android:text="Transaction" />

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/nameCrypto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="@color/PrimaryColor"
        android:textSize="18dp"
        android:gravity="center"
        android:text="Crypto Name" />

    <TextView
        android:id="@+id/textCrypto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Price in dollars:" />

    <EditText
        android:id="@+id/priceCrypto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginVertical="20dp"
        android:ems="10"
        android:hint="Crypto"
        android:inputType="number" />

    <TextView
        android:id="@+id/textQuantity"
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quantity:" />

    <EditText
        android:id="@+id/quantityCrypto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginVertical="20dp"
        android:ems="10"
        android:hint="Quantity"
        android:inputType="number"
        />

    <Button
        android:id="@+id/BuyandSellBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="buy" />
</LinearLayout>
</LinearLayout>