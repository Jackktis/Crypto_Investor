<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.profile.ProfileFragment">

    <RelativeLayout
        android:id="@+id/relativeProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/frameProfile"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/profile_banner"
            android:layout_width="411dp"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/portfolio_banner"
            android:elevation="2dp" />
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/portfolio_card"
            android:layout_width="372dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            app:cardCornerRadius="20dp"
            app:cardElevation="18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/portfolio_card"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="30dp"
                    android:text="Your total balance"
                    android:textColor="@color/bannerGold"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_gravity="end" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="180dp"

                    android:layout_marginRight="30dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="$"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="36dp"
                        android:layout_gravity="right"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10.000"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="36dp"
                        android:layout_gravity="right"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center">
                    <Button
                        android:layout_width="105dp"
                        android:layout_height="match_parent"
                        android:theme="@style/Button.Black"
                        android:layout_marginEnd="7dp"
                        android:text="Deposit"
                        android:textSize="9sp"/>
                    <Button
                        android:layout_width="105dp"
                        android:layout_height="match_parent"
                        android:theme="@style/Button.Black"
                        android:layout_marginEnd="7dp"
                        android:text="Withdraw"
                        android:textSize="9sp"/>

                    <Button
                        android:layout_width="106dp"
                        android:layout_height="match_parent"
                        android:theme="@style/Button.Black"
                        android:text="Transaction"
                        android:textSize="9sp"/>
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frameProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/relativeProfile"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>