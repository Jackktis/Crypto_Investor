<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/BoughtCurrencyIcon"
        android:layout_marginHorizontal="5dp"
        android:layout_weight="1.4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/crypto_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/CurrencyNameSold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CURRENCY NAME"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/CurrencySymbolSold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Symbol" />

        <TextView
            android:id="@+id/soldDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sold at: Sold date" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="1.3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dollarSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="" />

        <TextView
            android:id="@+id/soldPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginVertical="7dp"
            android:textSize="9sp"
            android:textColor="@color/black"
            android:text="sold pr. quantity:" />

        <TextView
            android:id="@+id/soldQuantities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textSize="9sp"
            android:textColor="@color/black"
            android:text="sold quantities:" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="1.1"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/profitInAll"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Currency price" />
        <TextView
            android:id="@+id/quantityPriceSold"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textSize="9sp"
            android:layout_gravity="right"
            android:layout_marginVertical="7dp"
            android:layout_height="wrap_content"
            android:text="sold price pr. quantity" />
        <TextView
            android:id="@+id/amountOfQuantities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textSize="9sp"
            android:textColor="@color/black"
            android:text="Amount of quantities" />
    </LinearLayout>


</LinearLayout>